<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:id="root" spacing="5">
    <padding>
        <Insets bottom="5" left="5" right="5" top="5"/>
    </padding>

    <HBox spacing="5">
        <ListView fx:id="sourceList" prefWidth="300" prefHeight="300"/>
        <ListView fx:id="targetList" prefWidth="300" prefHeight="300"/>
    </HBox>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="cancelButton" onAction="#cancel" text="%word.cancel"/>
        <Button defaultButton="true" onAction="#accept" text="%word.accept"/>
    </HBox>
</VBox>
